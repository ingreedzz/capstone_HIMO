{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "." }
    },
    {
      "src": "app.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/views/(.*)", "dest": "/views/$1" },
    { "src": "/api/(.*)", "dest": "/app.js" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}